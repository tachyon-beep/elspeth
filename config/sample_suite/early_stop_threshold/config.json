{
  "name": "early_stop_threshold",
  "description": "Stops once the analysis criteria crosses 0.63 after two rows with an overall guardrail",
  "enabled": true,
  "temperature": 0.0,
  "max_tokens": 256,
  "prompt_pack": "sample",
  "early_stop_plugins": [
    {
      "name": "threshold",
      "options": {
        "metric": "scores.analysis",
        "threshold": 0.63,
        "comparison": "gte",
        "min_rows": 2,
        "label": "analysis_high"
      }
    },
    {
      "name": "threshold",
      "options": {
        "metric": "score",
        "threshold": 0.6,
        "comparison": "gte",
        "min_rows": 2,
        "label": "overall_high_guardrail"
      }
    }
  ]
}
